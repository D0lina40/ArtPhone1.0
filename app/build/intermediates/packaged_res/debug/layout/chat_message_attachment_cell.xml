<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                               

    
                                          
                 
                       
                                                                                      
           

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:orientation="vertical" android:tag="layout/chat_message_attachment_cell_0" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="?attr/backgroundColor"/>

        <ImageView
            android:visibility="gone"                                                  
            android:contentDescription="@string/content_description_pending_file_transfer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
                                android:tag="binding_1"/>

        <TextView
            android:visibility="gone"                                                  
            style="@style/chat_file_attachment_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:drawablePadding="5dp"
            android:text="test.mkv"                            
            app:drawableTopCompat="@drawable/file_video"  android:tag="binding_2"/>

        <ImageView
            android:visibility="gone"                                                  
            android:contentDescription="@string/content_description_pending_file_transfer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="binding_3"        />

        <TextView
            style="@style/chat_file_attachment_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:drawablePadding="5dp"
            android:visibility="gone"                                                                
            android:text="test.txt"                            
            android:drawableTop="@drawable/file"                                                                                                 
            tools:ignore="UseCompatTextViewDrawableXml"  android:tag="binding_4"/>

        <ImageView
            android:tag="binding_5"                 
            android:contentDescription="@string/content_description_remove_pending_file_transfer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/field_clean" />

    </RelativeLayout>

         