<?xml version="1.0" encoding="utf-8"?>
                                                                   

    
                                           
                                                   
                 
                       
                                                                                  
           

    <RelativeLayout
                                                     
        android:layout_width="match_parent"
        android:layout_height="60dp" android:tag="layout/chat_room_ephemeral_duration_cell_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:tag="binding_1"            
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/selected"
            android:textColor="?attr/primaryTextColor"
            android:textSize="20sp"
                                                                                   />

        <ImageView
            android:id="@+id/selected"
            android:tag="binding_2"                                         
            android:contentDescription="@string/content_description_ephemeral_duration_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/check_selected" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/dividerColor" />

    </RelativeLayout>

         